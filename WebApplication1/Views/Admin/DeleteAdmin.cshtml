@model WebApplication1.Models.Admin
<!DOCTYPE html>
<html>
<head>
    <title>Delete Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #ffe6e6, #ffffff);
        }

        .container {
            margin-top: 100px;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            max-width: 500px;
        }

        h2 {
            text-align: center;
            color: #e74c3c;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .btn-delete {
            background-color: #e74c3c;
            border-color: #e74c3c;
            color: white;
            font-weight: bold;
        }

            .btn-delete:hover {
                background-color: #c0392b;
                border-color: #a93226;
            }

        .btn-cancel {
            background-color: #3498db;
            border-color: #3498db;
            color: white;
            font-weight: bold;
        }

            .btn-cancel:hover {
                background-color: #2980b9;
                border-color: #1d6ca1;
            }

        .details {
            text-align: center;
            margin-bottom: 20px;
        }

            .details strong {
                color: #333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Admin</h2>
        <div class="details">
            <p>Are you sure you want to delete this Admin?</p>
            <p><strong>Username:</strong> @Model.UserName</p>
        </div>
        <div class="text-center">
            <form action="@Url.Action("DeleteConfirmed", "Admin", new { id = Model.Id })" method="post">
                <button type="submit" class="btn btn-delete">Yes, Delete</button>
                <a href="@Url.Action("AdminDetails", "Admin")" class="btn btn-cancel">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
