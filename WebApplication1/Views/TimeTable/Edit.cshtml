@model List<WebApplication1.Models.Timetable>

<!DOCTYPE html>
<html>
<head>
    <title>Edit Timetable</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Edit Timetable</h2>
        @using (Html.BeginForm("Save", "Timetable", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table class="table table-bordered table-striped mt-4">
                <thead>
                    <tr>
                        <th>Day</th>
                        <th>Subject</th>
                        <th>Time</th>s
                        <th>Teacher</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.TextBoxFor(m => Model[i].Day, new { @class = "form-control" })
                                @Html.HiddenFor(m => Model[i].Id)
                            </td>
                            <td>@Html.TextBoxFor(m => Model[i].Subject, new { @class = "form-control" })</td>
                            <td>@Html.TextBoxFor(m => Model[i].Time, new { @class = "form-control" })</td>
                            <td>@Html.TextBoxFor(m => Model[i].Teacher, new { @class = "form-control" })</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-success">Save Changes</button>
        }
    </div>
</body>
</html>


