@model IEnumerable<WebApplication1.Models.DocumentModel>
<div class="container py-5">
    <h1 class="my-4 text-center text-primary font-weight-bold">Available Documents</h1>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var document in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center mb-3 shadow-lg border-0 rounded bg-light">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-pdf text-danger me-3" style="font-size: 1.8rem;"></i>
                        <h5 class="mb-0 text-dark">@document.Title</h5>
                    </div>
                    <div>
                        <a href="@Url.Action("Download", "Document", new { id = document.DocumentId })" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-download"></i> Download
                        </a>
                        <a href="@Url.Action("Delete", "Document", new { id = document.DocumentId })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">No documents available for download at the moment.</p>
    }

    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</div>

<!-- Optional custom styling to further enhance the layout -->
<style>
    .container {
        max-width: 1200px;
    }

    h1 {
        font-size: 2.5rem;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        color: #0d6efd; /* Blue */
    }

    .list-group-item {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .list-group-item:hover {
            background-color: #f1f1f1;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .list-group-item h5 {
            font-weight: 600;
            font-size: 1.25rem;
            color: #343a40; /* Dark Gray */
        }

    .btn-primary {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 8px 18px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker Blue */
        }

    .btn-danger {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 8px 18px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #dc3545; /* Darker Red */
        }

    .btn-secondary {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 8px 18px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #6c757d; /* Darker Gray */
        }

    .fas {
        font-size: 1.2rem;
    }

    .text-muted {
        font-size: 1.2rem;
    }

    .text-center {
        font-size: 1.25rem;
        color: #f39c12; /* Golden Color */
        font-weight: bold;
    }
</style>
