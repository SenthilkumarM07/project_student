@model WebApplication1.Models.DocumentModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Document</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
        }

        .container {
            margin-top: 50px;
            background: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        h1 {
            text-align: center;
            color: #007bff;
            font-weight: bold;
            margin-bottom: 30px;
            font-size: 2rem;
        }

        .form-label {
            font-weight: bold;
            color: #007bff;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 12px;
            margin-bottom: 15px;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .btn-primary {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                box-shadow: 0px 8px 20px rgba(0, 123, 255, 0.6);
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #28a745;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            padding: 12px;
            width: 100%;
            margin-top: 10px;
        }

            .btn-secondary:hover {
                background-color: #218838;
            }

        .text-danger {
            font-size: 0.875rem;
        }

        .icon-margin {
            margin-right: 8px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1><i class="fas fa-upload"></i> Upload Document</h1>

        @using (Html.BeginForm("Upload", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Title, "Document Title", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter document title", @aria_label = "Document Title" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.Label("File Upload", new { @class = "form-label" })
                <input type="file" name="file" class="form-control" aria-label="File Upload" accept=".pdf,.docx,.txt">
                @Html.ValidationMessageFor(m => m.FileName, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-cloud-upload-alt"></i> Upload
            </button>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("AdminIndex", "Document")" class="btn btn-secondary">
                <i class="fas fa-download icon-margin"></i> View Documents
            </a>
        </div>

        <div class="text-center mt-3">
            <a href="@Url.Action("AdminDetails", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
