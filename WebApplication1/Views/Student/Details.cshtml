@model IEnumerable<WebApplication1.Models.Student>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc); /* Blue to Purple gradient background */
            font-family: 'Arial', sans-serif;
            color: #ecf0f1;
        }

        .container {
            margin-top: 50px;
            background: #f5f6fa; /* Light grayish color for the container */
            color: #2c3e50; /* Dark text for better readability */
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 6px 40px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #2c3e50; /* Dark color for the header */
            font-weight: bold;
            margin-bottom: 30px;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
        }

        table {
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 30px;
            background-color: #34495e; /* Darker background for the table */
        }

        th {
            background: #2d3e50; /* Darker shade for table headers */
            color: white;
            text-align: center;
        }

        tr:hover {
            background-color: #ecf0f1; /* Light hover effect for rows */
            transition: background-color 0.3s ease;
        }

        td, th {
            vertical-align: middle;
            text-align: center;
        }

        .btn {
            padding: 8px 15px;
            font-size: 1em;
            font-weight: bold;
            border-radius: 5px;
            display: inline-flex;
            align-items: center;
        }

        .btn-edit {
            background-color: #3498db; /* Bright blue for edit button */
            border-color: #3498db;
            color: white;
        }

            .btn-edit:hover {
                background-color: #2980b9;
                border-color: #2471a3;
            }

        .btn-delete {
            background-color: #e74c3c; /* Red for delete button */
            border-color: #e74c3c;
            color: white;
        }

            .btn-delete:hover {
                background-color: #c0392b;
                border-color: #a93226;
            }

        .btn-success {
            background-color: #2ecc71; /* Green for success button */
            border-color: #2ecc71;
            color: white;
        }

            .btn-success:hover {
                background-color: #27ae60;
                border-color: #1e8449;
            }

        .text-end a {
            font-weight: bold;
        }

        .icon {
            margin-right: 8px;
        }

        .no-students {
            text-align: center;
            font-size: 1.2em;
            color: #e74c3c;
        }

        /* Make the table responsive */
        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Student List</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Department</th>
                        <th>Gender</th>
                        <th>Course</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Age</td>
                                <td>@student.Department</td>
                                <td>@student.Gender</td>
                                <td>@student.Course</td>
                                <td>@student.PhoneNumber</td>
                                <td>@student.Email</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-edit">
                                        <i class="fa-solid fa-pen icon"></i>Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Student", new { id = student.Id })" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this student?');">
                                        <i class="fa-solid fa-trash icon"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="no-students">
                            <td colspan="9">No students found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end">
            <a href="@Url.Action("Create", "Student")" class="btn btn-success">
                <i class="fa-solid fa-plus icon"></i>Add New Student
            </a>
        </div>
        <div class="text-center mt-3">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-success">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
</body>
</html>
