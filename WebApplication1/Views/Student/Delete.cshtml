@model WebApplication1.Models.Student
<!DOCTYPE html>
<html>
<head>
    <title>Delete Student</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
            background: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            font-weight: bold;
            color: #dc3545;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .text-warning {
            font-size: 1.2em;
            color: #856404;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-danger {
            background: linear-gradient(to right, #dc3545, #ff6f61);
            border: none;
            color: #fff;
        }

            .btn-danger:hover {
                background: linear-gradient(to right, #c82333, #ff5c4d);
            }

        .btn-secondary {
            background: #6c757d;
            color: #fff;
        }

            .btn-secondary:hover {
                background: #5a6268;
            }

        .mb-3 {
            padding: 10px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 15px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

        strong {
            color: #333;
        }

        .text-center {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Student</h2>
        <p class="text-warning">Are you sure you want to delete this record? This action cannot be undone.</p>
        <hr />
        <div class="mb-3">
            <strong>ID:</strong> @Html.DisplayFor(m => m.Id)
        </div>
        <div class="mb-3">
            <strong>Name:</strong> @Html.DisplayFor(m => m.Name)
        </div>
        <div class="mb-3">
            <strong>Age:</strong> @Html.DisplayFor(m => m.Age)
        </div>
        <div class="mb-3">
            <strong>Department:</strong> @Html.DisplayFor(m => m.Department)
        </div>
        <div class="mb-3">
            <strong>Gender:</strong> @Html.DisplayFor(m => m.Gender)
        </div>
        <div class="mb-3">
            <strong>Course:</strong> @Html.DisplayFor(m => m.Course)
        </div>
        <div class="mb-3">
            <strong>Phone Number:</strong> @Html.DisplayFor(m => m.PhoneNumber)
        </div>
        <div class="mb-3">
            <strong>Email:</strong> @Html.DisplayFor(m => m.Email)
        </div>

        @using (Html.BeginForm("DeleteConfirmed", "Student", FormMethod.Post))
        {@Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Details", "Student")" class="btn btn-secondary">Cancel</a>
        </div>
    }
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
</body>
</html>